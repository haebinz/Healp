<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherActivity">


    <ImageButton
        android:id="@+id/imageButtonBack5"
        android:layout_width="31dp"
        android:layout_height="28dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="337dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/buttonContinue5"
        android:layout_width="168dp"
        android:layout_height="53dp"
        android:layout_marginBottom="106dp"
        android:text="목표 계산"
        android:backgroundTint="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textWeather"
        android:layout_width="255dp"
        android:layout_height="44dp"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="기후/날씨 선택"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="264dp"
        android:layout_height="43dp"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:text="기후가 더울수록,하루 필요한 수분 섭취량이 많아집니다."
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWeather" />

    <android.widget.Button
        android:id="@+id/btnWeatherHot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/sunny"
        android:drawablePadding="4dp"
        android:padding="16dp"
        android:paddingLeft="8dp"
        android:text="더움"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnWeatherWarm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <android.widget.Button
        android:id="@+id/btnWeatherWarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/mild"
        android:padding="16dp"
        android:text="온화"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnWeatherHot" />

    <android.widget.Button
        android:id="@+id/btnWeatherCold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/snowflake"
        android:padding="16dp"
        android:text="추움"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnWeatherWarm" />


</androidx.constraintlayout.widget.ConstraintLayout>